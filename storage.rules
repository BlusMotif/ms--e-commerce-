rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /products/{allPaths=**} {
      allow read: if true;
      // Allow any authenticated user to upload products
      allow write: if request.auth != null;
    }
    
    match /banners/{allPaths=**} {
      allow read: if true;
      // Allow any authenticated user to upload banners (for testing)
      // TODO: Restrict to admin only once role claims are implemented
      allow write: if request.auth != null;
    }
    
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
  }
}
